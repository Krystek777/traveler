<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="claimForm" type="com.opitz.form.ClaimForm"/>
        <form-bean name="loginForm" type="com.opitz.form.LoginForm"/>
    </form-beans>

    <action-mappings>
        <action name="claimForm" path="/addClaim" type="com.opitz.action.ClaimAction" scope="request" input="addClaim.jsp">
            <forward name="failure" path="/failure.jsp" />
            <forward name="success" path="/success.jsp" />
        </action>
        <action name="loginForm" path="/login" type="com.opitz.action.LoginAction" scope="request" input="login.jsp">
            <forward name="failure" path="/loginFailure.jsp"/>
            <forward name="success" path="/all.jsp"/>
        </action>
    </action-mappings>

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/WEB-INF/validator-rules.xml" />
    </plug-in>
</struts-config>