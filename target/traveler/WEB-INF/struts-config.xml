<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <!-- Form Beans -->
    <form-beans>
        <form-bean name="claimForm" type="com.opitz.form.ClaimForm"/>
        <form-bean name="loginForm" type="com.opitz.form.LoginForm"/>
        <form-bean name="signUpForm" type="com.opitz.form.SignUpForm"/>
    </form-beans>

    <!-- Global Exceptions -->
    <global-exceptions>
    </global-exceptions>


    <!--Action Mappings-->
    <action-mappings>
        <action path="/addClaim" name="claimForm"  type="com.opitz.action.ClaimAction" scope="request" input="addClaim">
            <forward name="success" path="claimAdded.td" />
        </action>
        <action path="/claims" parameter="method" type="com.opitz.action.ClaimAction">
            <forward name="updated" path="allClaims.td"/>
        </action>
        <action path="/approveClaim" type="com.opitz.action.UpdateClaimAction">
            <forward name="success" path="/claims.do"/>
        </action>
        <action path="/rejectClaim" type="com.opitz.action.UpdateClaimAction">
            <forward name="success" path="/claims.do"/>
        </action>


        <action path="/signUp"  type="com.opitz.action.UserAction"
                parameter="signUp">
            <forward name="success" path="signUp.td" />
        </action>

        <action path="/saveUser" name="signUpForm"  type="com.opitz.action.UserAction"
                parameter="saveUser"
                input="signUp.td"
                validate="true">
            <forward name="success" path="signUp.td" />
        </action>

        <action path="/signOut"  type="com.opitz.action.UserAction" scope="request"
                parameter="signOut">
            <forward name="success" path="welcome.td" />
        </action>


        <action  path="/login" type="com.opitz.action.UserAction" scope="request"
                parameter="login">
            <forward name="success" path="login.td"/>
        </action>

        <action name="loginForm" path="/loginSubmit" type="com.opitz.action.UserAction" scope="request"
                parameter="loginSubmit"
                input="/login.jsp">
            <!--<forward name="failure" path="loginFailure"/>-->
            <forward name="success" path="welcome.td"/>
        </action>


        <action path="/Link" parameter="method" type="com.opitz.action.LinkAction">
            <forward name="addClaim" path="addClaim.td"/>
            <forward name="all" path="allClaims.td"/>
            <forward name="welcome" path="welcome.td"/>
            <forward name="signUp" path="signUp.td"/>
        </action>

        <action path="/onInit" parameter="method" type="com.opitz.action.OnInitAction">
            <forward name="onInit" path="welcome.td"/>
        </action>
    </action-mappings>

    <!-- Message Resources -->
    <message-resources parameter="com.opitz.ApplicationResources"/>

    <!--Validator Configuration -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" />
    </plug-in>

    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config"
                      value="/WEB-INF/tiles-defs.xml"/>
        <set-property property="moduleAware" value="true" />
    </plug-in>


</struts-config>