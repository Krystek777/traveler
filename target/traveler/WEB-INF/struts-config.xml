<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <!-- Form Beans -->
    <form-beans>
        <form-bean name="claimForm" type="com.opitz.form.ClaimForm"/>
        <form-bean name="loginForm" type="com.opitz.form.LoginForm"/>
    </form-beans>

    <!-- Global Exceptions -->
    <global-exceptions>
    </global-exceptions>

    <!-- Global Forwards -->
    <global-forwards>
    </global-forwards>

    <!--Action Mappings-->
    <action-mappings>
        <action name="claimForm" path="/addClaim" type="com.opitz.action.ClaimAction" scope="request" input="/index.jsp">
            <forward name="success" path="/success.jsp" />
        </action>
        <action name="loginForm" path="/login" type="com.opitz.action.LoginAction" scope="request" input="/loginTile.jsp">
            <forward name="failure" path="/loginFailure.jsp"/>
            <forward name="success" path="/all.jsp"/>
        </action>
        <action path="/update" parameter="method" type="com.opitz.action.UpdateAction">
            <forward name="updated" path="/all.jsp"/>
        </action>
        <action path="/Link" parameter="method" type="com.opitz.action.LinkAction">
            <forward name="addClaim" path="add"/>
            <forward name="login" path="login"/>
        </action>
    </action-mappings>

    <!-- Message Resources -->
    <message-resources parameter="com.opitz.ApplicationResources" />

    <!--Validator Configuration -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" />
    </plug-in>

    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config"
                      value="/WEB-INF/tiles-defs.xml"/>
    </plug-in>


</struts-config>